<Window x:Class="Sekretar.Obavestenja.ObavestenjaDetaljnije"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sekretar.Obavestenja"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        xmlns:language="clr-namespace:Secretary.Properties.Langs"
        Closing="Window_closing"
        Style="{DynamicResource MyStyle}"
        Title="{x:Static language:Lang.notification}" Height="353.513" Width="395.785">
    <Grid HorizontalAlignment="Right" Margin="0,0,-0.4,0" Width="390" Height="324" VerticalAlignment="Top">
        <Button Name="btnCancel" IsEnabled="False" IsCancel="true" Margin="389,0,0,0" ></Button>
        <TextBox Name="TekstObavestenja"
            IsReadOnly="True"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Visible" Margin="29,84,29.6,42"
/>
        <TextBox Name="Naslov"
            IsReadOnly="True"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            FontSize="15" Margin="29,20,29,255" Text="Naslov obavestenja" TextChanged="Naslov_TextChanged"/>

    </Grid>
</Window>
