<Application x:Class="HealthCare.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HealthCare"
             StartupUri="/View/Patient/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>


            <Style x:Key="MyStyle" TargetType="{x:Type Window}">
                <Setter Property="Background" Value="FloralWhite"></Setter>
            </Style>
            <Style x:Key="MyStyleButton" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="SteelBlue"></Setter>
                <Setter Property="Foreground"  Value="White"></Setter>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
